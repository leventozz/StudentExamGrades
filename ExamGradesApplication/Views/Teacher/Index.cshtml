@model IEnumerable<ExamGradesApplication.Models.StudentListVM>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row mt-5">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Adı</th>
                    <th scope="col">Soyadı</th>
                    <th> İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StudentName</td>
                        <td>@item.StudentLastName</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="/Student/AddGrades/@item.StudentID">Not Ekle</a>
                            <a class="btn btn-danger btn-sm" href="/Student/DeleteStudent/@item.StudentID">Öğrenci Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>